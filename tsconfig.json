{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["DOM", "ES2015", "WebWorker"],
    "module": "es2020",
    "target": "ES5",
    "importHelpers": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}