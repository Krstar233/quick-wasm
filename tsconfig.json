{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["DOM", "ES2015", "WebWorker"],
    "module": "es2020",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}